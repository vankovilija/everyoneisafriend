package  {		import flash.display.MovieClip;	import flash.display.StageScaleMode;	import flash.external.ExternalInterface;	import flash.display.StageAlign;	import flash.events.Event;			public class DialogsMain extends MovieClip {		private var dialog:MovieClip;				public function DialogsMain() {			if(!stage)				addEventListener(Event.ADDED_TO_STAGE, init);			else				init();					}				private function init(e:Event = null):void		{			stage.scaleMode = StageScaleMode.NO_SCALE;			stage.align = StageAlign.TOP_LEFT;						if(ExternalInterface.available){				ExternalInterface.call("OnRegisterSWFCallback", this);			}		}				public function createDialogAt(positionX:int, positionY:int, dialogID:int):void		{			if(!dialog){				dialog = new DialogBackground();								addChild(dialog);				dialog.gotoAndPlay(1);			}						dialog.x = positionX;			dialog.y = positionY;						dialog.dialog.gotoAndStop(dialogID);		}				public function removeDialog():void		{												if(dialog){				dialog.gotoAndPlay(5);				dialog.addEventListener(Event.COMPLETE, function(e:Event):void{					removeChild(dialog);									dialog = null;				});							}		}	}	}