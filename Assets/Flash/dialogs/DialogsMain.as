package  {		import flash.display.MovieClip;	import flash.display.StageScaleMode;	import flash.external.ExternalInterface;	import flash.display.StageAlign;	import flash.events.Event;	import com.greensock.TweenMax;			public class DialogsMain extends MovieClip {		public var dialog:MovieClip;		public var cant:MovieClip;		public var can:MovieClip;		public var moreConfidence:MovieClip;				public function DialogsMain() {							stage.scaleMode = StageScaleMode.NO_SCALE;			stage.align = StageAlign.TOP_LEFT;					addEventListener(Event.ENTER_FRAME, init);		}				private function init(e:Event = null):void		{						removeEventListener(Event.ENTER_FRAME, init);						dialog.visible = false;			dialog.stop();						can.visible = false;			can.stop();						cant.visible = false;			cant.stop();						moreConfidence.visible = false;			moreConfidence.stop();						if(ExternalInterface.available){				ExternalInterface.call("OnRegisterSWFCallback", this);			}		}				public function createDialogAt(positionX:int, positionY:int, dialogID:int):void		{			if(!dialog.visible){				dialog.visible = true;				dialog.gotoAndPlay(1);			}						dialog.x = positionX;			dialog.y = positionY;						dialog.dialog.gotoAndStop(dialogID);		}				public function removeDialog():void		{												if(dialog.visible){				dialog.gotoAndPlay(5);				dialog.addEventListener(Event.COMPLETE, changeDialogVis);							}		}				private function changeDialogVis(e:Event):void{			dialog.removeEventListener(Event.COMPLETE, changeDialogVis);			dialog.visible = false;									}				public function takeDialogBuff():void		{			dialog.dialog.button.play();			TweenMax.delayedCall(0.5, removeDialog);		}				public function showCan(positionX:int, positionY:int, t:String):void		{			if(!can.visible){				can.visible = true;										TweenMax.delayedCall(2, hideCan);			}						can.x = positionX;			can.y = positionY;			//can.text.text = t;								}				public function hideCan():void		{			can.visible = false;		}				public function showCant(positionX:int, positionY:int, t:String):void		{			if(cant.visible){				cant.visible = true;						TweenMax.delayedCall(2, hideCant);			}			cant.x = positionX;			cant.y = positionY;			//cant.text.text = t;								}				public function hideCant():void		{			cant.visible = false;		}				public function showMoreConfidenceAt(positionX:int, positionY:int):void		{			if(moreConfidence.visible){				moreConfidence.visible = true;				TweenMax.delayedCall(2, hideMoreConfidence);			}						moreConfidence.x = positionX;			moreConfidence.y = positionY;								}				public function hideMoreConfidence():void		{			moreConfidence.visible = false;		}	}	}