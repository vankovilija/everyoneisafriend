package  {		import flash.display.MovieClip;	import scaleform.clik.core.UIComponent;	import scaleform.clik.layout.LayoutData;	import scaleform.clik.layout.Layout;			public class LayoutContainer extends UIComponent {						public var topLeft:MovieClip;					public var bottomLeft:MovieClip;							public var layout:Layout;				public function LayoutContainer() {																		//topLeft.pickupScroll();			//topLeft.pickupScroll();			//topLeft.pickupScroll();									bottomLeft.layoutData = new LayoutData("left", "bottom");						layout = new Layout();			//layout.tiedToStageSize = true;			addChild(layout);						updateConfidence(0);		}				override protected function draw():void		{						super.draw();		}				public function pickupScroll(scrollID:int):void		{			bottomLeft['uiScroll' + scrollID].gotoAndStop(2);		}				public function updateConfidence(percent:Number):void		{			percent /= 100;						topLeft.confidenceBar.mask1.scaleX = percent;		}	}	}